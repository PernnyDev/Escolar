<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Editar Aluno: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_aluno/aluno/editar_aluno" method="POST">
                        {{#if alunos}}
                        <label for="id_aluno">ID: </label>
                        <input type="text" name="id_aluno" readonly="true" class="form-control" value="{{alunos._id}}">
                        <br>
                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{alunos.nome}}">
                        <br>
                        <label for="matricula">Matricula: </label>
                        <input type="text" id="matricula" name="matricula" class="form-control" value="{{alunos.matricula}}">
                        <br>
                        {{/if}}
                        <label for="turma">Turma:</label>
                        <select name="fk_turma" class="custom-select">
                            {{#each turmas}}
                            <option value="{{descricao}}">{{descricao}}</option>
                            {{else}}
                            <option value="0">Nenhuma turma registrada</option>
                            {{/each}}
                        </select>
                        <br>
                        <br>
                        <button type="submit" class="btn btn-success">Editar Aluno</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>