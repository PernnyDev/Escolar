<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Editar Turma: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_turma/turma/editar_turma" method="POST">
                        {{#if turmas}}
                        <label for="id_turma">ID: </label>
                        <input type="text" name="id_turma" readonly="true" class="form-control" value="{{turmas._id}}">
                        <br>
                        <label for="descricao">Descrição: </label>
                        <input type="text" id="descricao" name="descricao" class="form-control" value="{{turmas.descricao}}">
                        <br>
                        <button type="submit" class="btn btn-success">Editar turma</button>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>